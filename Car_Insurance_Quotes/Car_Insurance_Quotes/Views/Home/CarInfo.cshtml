@using Car_Insurance_Quotes.Models
@model tbl_customer

<div class="row no-gutters m-3">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h5 class="m-0">Enter information about your car and driving history</h5>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("CarInfo", "Home", FormMethod.Post))
            {
                <form class="row no-gutters">
                    <input name="id" type="hidden" value="@Model.Customer_Id" />
                    <div class="form-group row col-md-12">
                        <label class="col-6" for="c1">What is your Car's year?</label>
                        <div class="col-6">
                            <input name="carYear" type="number" class="form-control" id="c1" />
                        </div>
                    </div>
                    <div class="form-group row col-md-12">
                        <div class="col-6">
                            <input name="carMake" type="text" class="form-control" placeholder="Car Make">
                        </div>
                        <div class="col-6">
                            <input name="carModel" type="text" class="form-control" placeholder="Car Model">
                        </div>
                    </div>
                    <div class="form-group row col-md-12">
                        <label class="col-6" for="c3">Have you ever had a DUI before?</label>
                        <div class="col-6">
                            <select name="carDUI" class="form-control col" id="c3">
                                <option>Yes</option>
                                <option>No</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row col-md-12">
                        <label class="col-6">How many speeding tickets have you had?</label>
                        <div class="col-6">
                            <input name="carSpeedingTickets" type="number" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row col-md-12">
                        <label class="col-6" for="exampleFormControlSelect1">What kind of coverage do you want?</label>
                        <div class="col-6">
                            <select name="carCoverage" class="form-control col" id="exampleFormControlSelect1">
                                <option>Full</option>
                                <option>Liability</option>
                            </select>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-block btn-primary">Submit</button>
                </form>
            }
        </div>
    </div>
</div>