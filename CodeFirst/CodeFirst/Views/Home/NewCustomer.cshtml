<div class="container">
    @using (Html.BeginForm("NewCustomer", "Home", FormMethod.Post))
    {
        <form class="row">
            <div class="form-group">
                <input type="text" name="firstName" class="form-control col" placeholder="First Name">
            </div>
            <div class="form-group">
                <input type="text" name="lastName" class="form-control col" placeholder="Last Name">
            </div>
            <div class="form-group">
                <input type="email" name="emailAddress" class="form-control col" placeholder="Email Address">
            </div>
            <button type="submit" class="btn btn-block btn-primary">Submit</button>
        </form>
    }
</div>